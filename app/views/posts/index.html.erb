<h2> The created post</h2>

<%= link_to "New post", new_post_path %>

<table border="1">
	<tr>
		<th>Title</th>
		<th>Text</th>
		<th></th>
	</tr>
	<% @posts.each do |post| %>
		<tr>
			<td><%= post.title %></td>
			<td> <%= post.text %></td>
			<td><%= link_to "Show", post_path(post) %></td>
		</tr>
	<% end %>
</table>